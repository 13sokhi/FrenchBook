<Page x:Class="FrenchBookApp.TopicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrenchBookApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TopicPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🟦 Header (Fixed) -->
        <Border Background="#2C3E50" Padding="20" Grid.Row="0" SnapsToDevicePixels="True">
            <DockPanel>
                <Button Content="Back" Click="Back_Click" Width="80" Height="35" Margin="0,0,20,0" VerticalAlignment="Center" Background="White" Foreground="#2C3E50" FontWeight="Bold" DockPanel.Dock="Left" BorderThickness="0" Cursor="Hand"/>
                
                <TextBlock x:Name="TopicNameText" Text="Topic Name" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Content="Delete" Click="DeleteTopic_Click" Width="80" Height="35" Margin="0,0,20,0" VerticalAlignment="Center" Background="White" Foreground="#2C3E50" FontWeight="Bold" DockPanel.Dock="Right" BorderThickness="0" Cursor="Hand"/>

                    <Button Content="Settings" Click="Back_Click" Width="80" Height="35" Margin="0,0,20,0" VerticalAlignment="Center" Background="White" Foreground="#2C3E50" FontWeight="Bold" DockPanel.Dock="Right" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🧾 Scrollable content area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,10,0,10">

                <!-- 🟢 Input area for adding a new sentence -->
                <Border Margin="0,0,0,20" Padding="15" Background="#FFF8F8F8" CornerRadius="10" BorderBrush="LightGray" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- English Input -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="English" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <TextBox x:Name="EnglishInput" Height="100" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="8"/>
                        </StackPanel>

                        <!-- French Input -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="French" FontWeight="Bold" FontSize="14"
                               Margin="0,0,0,5"/>
                            <TextBox x:Name="FrenchInput" Height="100" FontSize="16" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Padding="8"/>
                        </StackPanel>

                        <!-- Translate Button -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Height="100">
                            <Button x:Name="TranslateButton" Content="Translate" Width="120" Height="40" VerticalAlignment="Bottom" Margin="15,0,0,20" Click="TranslateButton_Click" />
                            <Button x:Name="SaveButton" Content="Save" Width="120" Height="40" VerticalAlignment="Bottom" Margin="15,0,0,0" Click="Save_Translation_Click"/>
                        </StackPanel>
                        
                    </Grid>
                </Border>

                <!-- 🟣 Example sentence block (existing content) -->
                
                <StackPanel x:Name="SentencesPanel">
